<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/text_first_char_hint"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:paddingLeft="3dip"
        android:background="#FFFFFF"
        android:visibility="gone"></TextView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <CheckBox
            android:id="@+id/sporter_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp" />

        <ImageView
            android:id="@+id/sporter_GenderImg"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_gravity="center|left" />

        <TextView
            android:id="@+id/sporter_py"
            android:layout_width="0dip"
            android:layout_height="20dip"
            android:layout_gravity="center|left"
            android:singleLine="true"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/sporter_nm"
            android:layout_width="140dp"
            android:layout_height="33dp"
            android:gravity="top"
            android:singleLine="true"
            android:paddingLeft="3dip"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/sporter_button_delete"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:layout_marginRight="3dip"
            android:background="@drawable/delete" />

        <ImageButton
            android:id="@+id/sporter_button_update"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginRight="33dp"
            android:layout_gravity="center"
            android:background="@drawable/update" />
    </LinearLayout>
</LinearLayout>